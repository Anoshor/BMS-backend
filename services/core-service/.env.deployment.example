# ========================================
# BMS Backend - Deployment Environment Variables
# ========================================
# Instructions for receiver:
# 1. Copy this file to .env
# 2. Fill in all required values
# 3. Run: docker-compose -f docker-compose-deployment.yml up -d
# ========================================

# JWT Configuration - CHANGE THESE FOR SECURITY!
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_256_BITS
JWT_ACCESS_TOKEN_EXPIRATION=900
JWT_REFRESH_TOKEN_EXPIRATION=2592000

# AWS S3 Configuration - REQUIRED
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_REGION=us-east-2
AWS_S3_ACCESS_KEY=your-access-key-here
AWS_S3_SECRET_KEY=your-secret-key-here
AWS_S3_BASE_URL=https://s3.us-east-2.amazonaws.com

# AWS CloudFront Configuration - OPTIONAL
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
AWS_CLOUDFRONT_ENABLED=true

# Database Configuration
POSTGRES_PASSWORD=bms_password

# Email Configuration (Optional - for notifications)
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your-email@gmail.com
SPRING_MAIL_PASSWORD=your-app-password
