        {
          "name": "Global Tenant Search",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains tenant data without sensitive fields', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.be.an('array');",
                  "    ",
                  "    // Verify no sensitive fields are exposed",
                  "    if (jsonData.data.length > 0) {",
                  "        var tenant = jsonData.data[0];",
                  "        pm.expect(tenant).to.not.have.property('passwordHash');",
                  "        pm.expect(tenant).to.not.have.property('passwordResetToken');",
                  "    }",
                  "});"
                ],
