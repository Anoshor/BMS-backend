# ========================================
# BMS Backend Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MINIMUM_256_BITS
JWT_ACCESS_TOKEN_EXPIRATION=900
JWT_REFRESH_TOKEN_EXPIRATION=2592000

# AWS S3 Configuration
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_REGION=us-east-2
AWS_S3_ACCESS_KEY=your-access-key
AWS_S3_SECRET_KEY=your-secret-key
AWS_S3_BASE_URL=https://s3.us-east-2.amazonaws.com

# AWS CloudFront Configuration
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
AWS_CLOUDFRONT_ENABLED=true

# Database Configuration (for docker-compose)
# These are defaults for local dev - change for production
POSTGRES_USER=bms_user
POSTGRES_PASSWORD=bms_password
POSTGRES_CORE_DB=bms_core
POSTGRES_NOTIFICATION_DB=bms_notifications

# Email Configuration (Optional - for notification service)
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your-email@gmail.com
SPRING_MAIL_PASSWORD=your-app-password
